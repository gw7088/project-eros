extends layout

block layout-content
  div.View.WelcomeView
    h1.Banner.mb-4 👑 Victory Sweepstakes 👑
    .container.mt-5
      .row.text-center(style="display:grid; color:black")
        h2 Will you be the Next
      .row.text-center(style="display:grid; color:black")
        h1 Winner?
    .container.text-center
      h4.enter-title Ⓔⓝⓣⓔⓡ ⓣⓞ ⓦⓘⓝ     $⃝⑤⓪    ,⃝⓪⓪⓪    .⃝⓪⓪
    .container
      form(class="form-signin")
            #error
                if error
                    p.text-danger Error!!!
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal', 'text-center']
            h1(class=h1Classes style="color:gold;") Fill In Form
            //- Input Email
            label( for="inputEmail" class="sr-only") Email Address
            input(type="email" name="username" id="inputEmail" class="form-control" placeholder="Email Address" required autofocus)
            //- Input Phone
            label(for="inputPhone" class="sr-only") Phone
            input(type="phone" name="phone" id="inputPhone" class="form-control mt-1" placeholder="Phone" required)
            //- Complete form button
            - var buttonClass=['btn', 'btn-lg', 'btn-block', 'mt-3'];
            button.submit(class=buttonClass type="submit")  Confirm Entry
            - var pClasses=['mt-4', 'mb-1', 'text-white', 'text-center'];
            p(class=pClasses) © 2022
        
  link(rel='stylesheet', href='/stylesheets/mainpage.css', type='text/css')
  script(src="/javascripts/mainpage.js")